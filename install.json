{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./eager-disqus.js"
      },
      {
        "type": "script",
        "contents": "EagerDisqus.init(Eager.createElement(INSTALL_OPTIONS.location), INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "account": {
        "title": "Disqus Account",
        "type": "object",
        "format": "account",
        "services": ["discus"],
        "order": 0,
        "required": false
      },
      "disqusShortName": {
        "title": "Forum",
        "type": "string",
        "description": "Login above to see a list of your existing forums or create a new one.  If you donâ€™t wish to login you can enter your existing shortname here.",
        "order": 1,
        "add": {
          "description": "Enter the name for your new Disqus forum",
          "properties": {
            "name": {
              "title": "Forum Name",
              "type": "string"
            }
          }
        }
      },
      "location": {
        "title": "Location",
        "type": "object",
        "format": "element",
        "order": 10
      }
    }
  },
  "hooks": [
    {
      "endpoint": "http://provisioner.eager.io/disqus/v2/hook",
      "events": ["option-change:account", "preview", "item-add"],
      "block": true,
      "authenticate": ["account"],
      "failure": {
        "action": "notify",
        "message": "There was an error communicating with Disqus."
      }
    },
    {
      "events": ["account-logout"],
      "action": "reset-schema"
    }
  ]
}
